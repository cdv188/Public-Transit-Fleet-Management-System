<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>viewlayer.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowVehicleListServlet</servlet-name>
        <servlet-class>viewlayer.ShowVehicleListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VehicleControllerServlet</servlet-name>
        <servlet-class>viewlayer.VehicleControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterVehicleServlet</servlet-name>
        <servlet-class>viewlayer.RegisterVehicleServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowVehicleByIdServlet</servlet-name>
        <servlet-class>viewlayer.ShowVehicleByIdServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowMaintenanceServlet</servlet-name>
        <servlet-class>viewlayer.ShowMaintenanceServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowMaintenanceByIdServlet</servlet-name>
        <servlet-class>viewlayer.ShowMaintenanceByIdServlet</servlet-class>
    </servlet>

    <!-- New servlets -->
    <servlet>
        <servlet-name>ReportsServlet</servlet-name>
        <servlet-class>viewlayer.ReportsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GpsDashboardServlet</servlet-name>
        <servlet-class>viewlayer.GpsDashboardServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FrontController</servlet-name>
        <servlet-class>viewlayer.FrontController</servlet-class>
    </servlet>

    <!-- Existing mappings -->
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowVehicleListServlet</servlet-name>
        <url-pattern>/ShowVehicleList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VehicleControllerServlet</servlet-name>
        <url-pattern>/VehicleController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterVehicleServlet</servlet-name>
        <url-pattern>/RegisterVehicle</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowVehicleByIdServlet</servlet-name>
        <url-pattern>/ShowVehicleById</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowMaintenanceServlet</servlet-name>
        <url-pattern>/ShowMaintenance</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowMaintenanceByIdServlet</servlet-name>
        <url-pattern>/ShowMaintenanceById</url-pattern>
    </servlet-mapping>

    <!-- New mappings -->
    <servlet-mapping>
        <servlet-name>ReportsServlet</servlet-name>
        <url-pattern>/reports</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GpsDashboardServlet</servlet-name>
        <url-pattern>/gpsDashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FrontController</servlet-name>
        <url-pattern>/FrontController</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>

</web-app>
